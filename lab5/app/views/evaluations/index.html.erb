<div class="basic">
  <div class="table">
  <h1>All Current Evaluations</h1>
    <table>
      <tr>
        <th><%= link_to "Grader First Name", :sort => "firstname" %></th>
        <th><%= link_to "Graders Last Name", :sort => "lastname" %></th>
        <th><%= link_to "Grader Dotnumber", :sort => "dotnumber" %></th>
        <th><%= link_to "Class", :sort => "class_id" %></th>
        <th><%= link_to "Rating", :sort => "rating" %></th>
        <th><%= link_to "Review", :sort => "review" %></th>
        <th><%= link_to "Teacher's Email", :sort => "email" %></th>
      </tr>

      <% @evaluation.each do |rec| %>

        <tr>
          <td><%= rec.firstname %></td>
          <td><%= rec.lastname %></td>
          <td><%= rec.dotnumber %></td>
          <td><%= rec.class_id %></td>
          <td><%= rec.rating %></td>
          <td><%= rec.review %></td>
          <td> <%= rec.email %></td>

          <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_evaluation_path(rec)%></td>
          <td><%= link_to '<button type="button">Delete</button>'.html_safe, evaluation_path(rec),
                        method: :delete,
                        data: {confirm: 'Are you sure?'}%></td>

        </tr>
      <%end%>
    </table>
    <%= link_to 'Back', admin_path %>
  </div>


</div>
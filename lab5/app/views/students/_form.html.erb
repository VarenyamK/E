<%=form_for @student do |f|%>
  <p>
    <%= f.label :firstname %>
    <%= f.text_field :firstname  %>
  </p>
  <p>
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :dotnumber %>
    <%= f.text_field :dotnumber %>
  </p>
  <p>
    <%= f.label :mondaystart %>
    <%= f.time_select :mondaystart %>
    <%= f.label :mondayend %>
    <%= f.time_select :mondayend %>
  </p>
  <p>
    <%= f.label :tuesdaystart %>
    <%= f.time_select :tuesdaystart %>
    <%= f.label :tuesdayend %>
    <%= f.time_select :tuesdayend %>
  </p>
  <p>
    <%= f.label :wednesdaystart %>
    <%= f.time_select :wednesdaystart %>
    <%= f.label :wednesdayend %>
    <%= f.time_select :wednesdayend %>
  </p>
  <p>
    <%= f.label :thursdaystart %>
    <%= f.time_select :thursdaystart %>
    <%= f.label :thursdayend %>
    <%= f.time_select :thursdayend %>
  </p>
  <p>
    <%= f.label :fridaystart %>
    <%= f.time_select :fridaystart %>
    <%= f.label :fridayend %>
    <%= f.time_select :fridayend %>
  </p>
  <div class = 'grades'>
    <%= f.fields_for :grades do |builder|%>
      <%= render 'grade_fields', f: builder %>
    <% end%>
  </div>

  <p>Unsure what grades you should put? click <%= link_to 'here', student_courses_path, :target => '_blank' %> for a list of classes that need TAs</p>

  <div class= "form-actions">
    <p>
      <%= link_to_add_association 'Add Class/Grade',  f, :grades, class: 'btn btn-primary', data: {
          association_insertion_node: '.grades', association_insertion_method: :append}%>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </div>



<%end%>

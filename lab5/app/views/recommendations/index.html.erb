<div class="basic">
  <h1>All Recommendations</h1>
  <div class="table">
  <table>
    <tr>
      <th><%= link_to "Graders First Name", :sort => "firstname" %></th>
      <th><%= link_to "Graders Last Name", :sort => "lastname" %></th>
      <th><%= link_to "Graders Dotnumber", :sort => "dotnumber" %></th>
      <th><%= link_to "Class ID", :sort => "class_id" %></th>
      <th><%= link_to "Recommended By", :sort => "email" %></th>
    </tr>

    <% @recommendations.each do |rec| %>

      <tr>


        <td><%= rec.firstname %></td>
        <td><%= rec.lastname %></td>
        <td style="text-align: center"><%= rec.dotnumber %></td>
        <td><%= rec.class_id %></td>
        <td><%= rec.email %></td>
          <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_recommendation_path(rec)%></td>
          <td><%= link_to '<button type="button">Delete</button>'.html_safe, course_path(rec),
                          method: :delete,
                          data: {confirm: 'Are you sure?'}%></td>

      </tr>
    <%end%>
  </table>
    <%= link_to 'Back', admin_path %>
  </div>


</div>
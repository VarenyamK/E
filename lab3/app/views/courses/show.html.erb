<table>
  <tr>
    <th>Class</th>
    <th>Section</th>
    <th>Component</th>
    <th>Time</th>
    <th>Location</th>
    <th>Professor</th>
  </tr>
  <tr>
    <td><%= @course.class_id %></td>
    <td><%= @course.section %></td>
    <td><%= @course.component %></td>
    <td><%= @course.time %></td>
    <td><%= @course.location %></td>
    <td><%= @course.professor %></td>
    <td><%= link_to '<button type="button">Edit</button>'.html_safe, edit_course_path(@course)%></td>
    <td><%= link_to '<button type="button">Delete</button>'.html_safe, course_path(@course),
                    method: :delete,
                    data: {confirm: 'Are you sure?'}%></td>
  </tr>
</table>
<p>
  <%= link_to '<button type="button">All Courses</button>'.html_safe, courses_path %>
</p>